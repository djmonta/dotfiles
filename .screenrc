# Last Modified: 2008/11/18-07:30:54
# -*- coding: utf-8 -*-

escape ^t^t
autodetach on
vbell off
# hardstatus alwayslastline I%wI
defhstatus I^En:^EtI
# hardstatus alwayslastline "%w | %h"
hardstatus alwayslastline "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d %{=b wb}%c"
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
vbell off
defscrollback 2000

bindkey -k kD stuff \177

## http://frexx.de/xterm-256-notes/
# erase background with current bg color
defbce "on"
# do not use 'screen-bce'
term xterm-256color

# ステータス行に各ウィンドウで打ったコマンドを表示
shelltitle "$ |bash"

# ログ記録
logfile "/home/monta/log/screen-%Y%m%d-%02c:%s-%n%t.log"
logtstamp on
log on
deflog on

# Using EmacsClient with screen
screen -t Emacs 1 /usr/bin/emacs