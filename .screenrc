# Last Modified: 2011/02/10-14:57:02
# -*- coding: utf-8 -*-

escape ^t^t
autodetach on
vbell off
startup_message off #スタートアップメッセージを表示しない
# hardstatus alwayslastline I%wI
defhstatus I^En:^EtI
# hardstatus alwayslastline "%w | %h"
hardstatus alwayslastline "%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d %{=b wb}%c"
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
vbell off
defscrollback 2000

bindkey -k kD stuff \177

# To Use Mouse
#termcapinfo xterm*|kterm* XT
termcapinfo xterm* ti@:te@

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

## http://frexx.de/xterm-256-notes/
# erase background with current bg color
defbce "on"
# do not use 'screen-bce'
term xterm-color

# Commands on Window Title
shelltitle "$ |bash"

# Logfile
logfile "/home/monta/log/screen-%Y%m%d-%02c:%s-%n%t.log"
logtstamp on
log on
deflog on

# Using EmacsClient
screen -t Emacs 1 /usr/bin/emacs -nw